---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<section class="bg-white flex flex-col justify-center items-center p-8 h-screen">
        <h2 class="text-4xl text-black font-bold mb-4">Sign In</h2>
        <img src="imgs/Logo.png" alt="" class="w-[247px] mb-4">
        <button class="btn btn-neutral text-white flex items-center mb-4">
            <img src="icons/github.svg" alt="" class="w-8 bg-white rounded-full">
            <p class="ml-2">Login with Github</p>
        </button>
        <button class="btn btn-neutral text-white bg-[#0A66C2] hover:bg-[#0A66C2] flex items-center mb-4">
            <img src="icons/linkedin.svg" alt="" class="w-7 bg-white p-1 rounded-sm" >
            <p class="ml-2">Login with LinkedIn</p>
        </button>
        <button class="btn btn-neutral bg-white text-black hover:bg-white shadow-md flex items-center mb-4 border-slate-300">
            <img src="icons/google.svg" alt="" class="w-9">
            <p class="ml-2">Login with Google</p>
        </button>        
        <p class="text-slate-600">new user? <a href="" class="hover:">sign up</a></p>
</section>